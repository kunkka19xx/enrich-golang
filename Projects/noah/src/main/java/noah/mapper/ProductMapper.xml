<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="noah.mapper.ProductMapper">

	
	<insert id="insertProduct" parameterType="noah.model.Product">
		INSERT INTO Product
		VALUES(
			#{id}
			, #{name}
		)
	</insert>
	
	
	<select id="getAllProducts" resultType="noah.model.Product">
		SELECT* FROM PRODUCT
	</select>
	
	
	<update id="updateProductByName" parameterType="noah.model.Product">
		UPDATE PRODUCT
		SET
			NAME = #{newName}	
		WHERE 1=1 AND
		<if test="newName!= null and newName!=''">
			NAME = #{oldName}
		</if>
	</update>
	
	<delete id="deleteProduct" parameterType="long">
		DELETE FROM PRODUCT
		
		WHERE ID = #{id}
	</delete>
	
</mapper>